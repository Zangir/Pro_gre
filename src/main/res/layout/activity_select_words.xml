<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.intelart.pro_gre.SelectWordsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Words"
        android:id="@+id/textView_sw"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button_SW1"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView_sw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button_SW2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_SW1"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button_SW3"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_SW2"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button_SW4"
        android:layout_below="@+id/button_SW3"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button_SW5"
        android:layout_below="@+id/button_SW4"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button_SW6"
        android:layout_alignTop="@+id/button_SW1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button_SW7"
        android:layout_above="@+id/button_SW3"
        android:layout_alignLeft="@+id/button_SW6"
        android:layout_alignStart="@+id/button_SW6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button_SW8"
        android:layout_above="@+id/button_SW4"
        android:layout_alignLeft="@+id/button_SW7"
        android:layout_alignStart="@+id/button_SW7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button_SW9"
        android:layout_alignTop="@+id/button_SW4"
        android:layout_alignLeft="@+id/button_SW8"
        android:layout_alignStart="@+id/button_SW8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/button_SW10"
        android:layout_alignTop="@+id/button_SW5"
        android:layout_alignLeft="@+id/button_SW9"
        android:layout_alignStart="@+id/button_SW9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="final Test"
        android:id="@+id/button_ft"
        android:layout_below="@+id/button_SW10"
        android:layout_alignRight="@+id/button_SW10"
        android:layout_alignEnd="@+id/button_SW10"
        android:layout_marginTop="76dp" />
</RelativeLayout>
